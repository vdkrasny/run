.navigation-is-locked
	overflow hidden
	-ms-touch-action none
	touch-action none

.navigation
	position fixed
	z-index 99
	top 0
	left 0
	display none
	width 100%
	height 100%
	background-color alpha(#ffffff, 96%)

	&__wrap
		display flex
		flex-direction column
		height 100%

	&__links-wrap
		margin auto
		overflow auto
		width 100%

	&__link
		padding  12px 0
		display block
		font-size 24px
		text-align center
		text-decoration none
		transition all .5s ease
		&:hover
		&:focus
			text-decoration underline
			color $color-accent2