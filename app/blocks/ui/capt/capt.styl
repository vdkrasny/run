.capt
	display block
	text-transform uppercase
	&_h1
		font-size 60px
	&_h2
		font-size 54px
	&_h3
		font-size 36px
	&_h4
		font-size 30px
	&_h5
		font-size 24px
	&_h6
		font-size 20px

+media($breakpoints[sm], 'max')
	.capt
		&_h1
			font-size 42px
		&_h2
			font-size 38px
		&_h3
			font-size 25px
		&_h4
			font-size 21px
		&_h5
			font-size 18px
		&_h6
			font-size 18px