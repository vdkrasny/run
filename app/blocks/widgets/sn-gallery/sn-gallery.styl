.sn-gallery
	display block
	overflow hidden

	&__grid
		margin -10px
		height 'calc(%s + %s)' % (100% 20px)
		+grid-set_col-style()
			padding 10px

	&__image-wrap
		position relative
		display block
		overflow hidden
		height 304px
		background-color #f9f9f9

	&__image
		position absolute
		top 50%
		left 50%
		display inline-block
		min-width 100%
		cursor pointer
		transform translate(-50%, -50%)
		transition transform 4s cubic-bezier(.18, .89, .32, 1.28)
		&:hover
			transform translate(-50%, -50%) scale(1.1)

	&__content
		position relative
		z-index 1
		padding 40px 20px 100px
		display flex
		overflow hidden
		flex-direction column
		justify-content space-between
		height 100%
		font-weight bold
		text-transform uppercase
		color #ffffff
		background-repeat no-repeat
		background-position center
		background-size cover
		&:before
			margin auto
			position-center(-1)
			display block
			width 100%
			height 100%
			content ''
			background-color #201e24
			opacity .7
			transition transform .5s

	&__label
	&__title
		margin-bottom 30px

	&__controls
		margin-top auto
		text-align center

	&__btn
		width 70%

	&__title-wrap
		margin-bottom 20px
		display flex
		flex-wrap wrap
		justify-content space-between
		align-items center