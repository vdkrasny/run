.tabs
	position relative

	&__nav
		margin-x -24px
		margin-bottom 80px
		overflow-x auto
		white-space nowrap
		border-bottom 4px solid $color-accent2

	&__switcher
		margin 0 24px
		padding 15px 24px
		display inline-block
		font-size 16px
		line-height 30px
		vertical-align middle
		cursor pointer
		text-transform uppercase
		&:first-child
			margin-left 0
		&:last-child
			margin-right 0
		&:hover
		&:focus
			color $color-accent2

		&.is-current
			color $color-accent1

	&__grid
		margin-x -13px
		+grid-set_col-style()
			padding 13px

	&__title
		margin-top 10px
		margin-bottom 15px
		display block
		font-weight bold

	&__subtitle
		margin-bottom 15px
		display block

	&__text
		margin-top 50px
		display block

	&__image
		margin auto

+media($breakpoints[lg], 'max')
	.tabs
		&__nav
			margin-x 0

+media($breakpoints[md], 'max')
	.tabs
		&__nav
			margin-bottom 30px
